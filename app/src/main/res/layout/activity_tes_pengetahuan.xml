<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:fitsSystemWindows="true">

    <!-- Custom Header -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#8B0000">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="12dp"
            android:paddingEnd="12dp">

            <ImageView
                android:id="@+id/backButton"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_back_arrow"
                android:tint="@android:color/white" />

            <TextView
                android:id="@+id/headerTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Tes Pengetahuan"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif" />
        </LinearLayout>
    </FrameLayout>

    <!-- Konten Scrollable -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="24dp"
            android:paddingVertical="16dp">

            <!-- Ilustrasi -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp">

                <ImageView
                    android:id="@+id/imgTes"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ilustrasipagelatihan"
                    android:scaleType="centerCrop"
                    android:contentDescription="Ilustrasi latihan" />
            </androidx.cardview.widget.CardView>

            <!-- Tombol Latihan -->
            <Button
                android:id="@+id/btnLatihan1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:background="@drawable/btn_latihan_shape"
                android:text="Latihan 1"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/btnLatihan2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/btn_latihan_shape"
                android:text="Latihan 2"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/btnLatihan3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/btn_latihan_shape"
                android:text="Latihan 3"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/btnLatihan4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/btn_latihan_shape"
                android:text="Latihan 4"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/btnLatihan5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/btn_latihan_shape"
                android:text="Latihan 5"
                android:textColor="#FFFFFF" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
