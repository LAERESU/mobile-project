<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:fitsSystemWindows="true">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#8B0000"
        app:title="Tes Pengetahuan"
        app:titleTextColor="@android:color/white"
        app:navigationIcon="@drawable/ic_back_arrow" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="24dp"
            android:paddingVertical="16dp">

            <!-- Gambar dengan sudut lengkung -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                android:layout_marginTop="16dp">

                <ImageView
                    android:id="@+id/imgTes"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ilustrasipagelatihan"
                    android:scaleType="centerCrop"
                    android:contentDescription="Ilustrasi latihan" />
            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/btnLatihan1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:background="@drawable/btn_latihan_shape"
                android:text="Latihan 1"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/btnLatihan2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/btn_latihan_shape"
                android:text="Latihan 2"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/btnLatihan3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/btn_latihan_shape"
                android:text="Latihan 3"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/btnLatihan4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/btn_latihan_shape"
                android:text="Latihan 4"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/btnLatihan5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/btn_latihan_shape"
                android:text="Latihan 5"
                android:textColor="#FFFFFF" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
