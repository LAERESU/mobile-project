<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="#FAF8F5">

    <!-- ðŸ”´ HEADER -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#8B0000">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="12dp"
            android:paddingEnd="12dp">

            <ImageView
                android:id="@+id/backButton"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_back_arrow"
                android:tint="@android:color/white" />

            <TextView
                android:id="@+id/headerTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Belajar (Audio)"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif" />
        </LinearLayout>
    </FrameLayout>

    <!-- ðŸ”µ KONTEN -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- ðŸŸ¤ Kartu Tokoh -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardElevation="6dp"
                app:cardCornerRadius="12dp"
                android:backgroundTint="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center_horizontal">

                    <ImageView
                        android:id="@+id/imgTokoh"
                        android:layout_width="160dp"
                        android:layout_height="160dp"
                        android:scaleType="centerCrop"
                        android:layout_marginBottom="12dp"
                        android:contentDescription="Foto Tokoh" />

                    <TextView
                        android:id="@+id/tvNama"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#8B0000"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tvDeskripsi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="#444444"
                        android:textAlignment="center"
                        android:lineSpacingExtra="2dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- ðŸŽµ Audio Control -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <SeekBar
                    android:id="@+id/seekBar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="12dp" />

                <Button
                    android:id="@+id/btnPlay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Play Audio"
                    android:backgroundTint="#8B0000"
                    android:textColor="@android:color/white" />
            </LinearLayout>

            <!-- ðŸ“– Cerita -->
            <TextView
                android:id="@+id/tvCerita"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="#333333"
                android:lineSpacingExtra="6dp"
                android:background="#FFF8F0"
                android:padding="12dp"
                android:layout_marginBottom="24dp"
                android:elevation="2dp"
                android:backgroundTint="#FFF8F0" />

            <!-- âœ… Tombol Selesai Belajar -->
            <Button
                android:id="@+id/btnSelesaiBelajar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Selesai Belajar"
                android:textAllCaps="false"
                android:layout_marginTop="8dp"
                android:backgroundTint="#008000"
                android:textColor="@android:color/white"
                android:padding="12dp"
                android:textSize="16sp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
