<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:layout_marginTop="4dp"
    android:layout_marginHorizontal="12dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="12dp"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:id="@+id/cardItemLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center_horizontal"
        android:background="#FFFFFF">

        <TextView
            android:id="@+id/tvTokoh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tokoh Proklamator"
            android:textSize="14sp"
            android:textColor="#333333"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <ImageView
            android:id="@+id/imgTokoh"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginBottom="8dp"
            android:scaleType="centerCrop"
            android:contentDescription="Foto Tokoh" />

        <TextView
            android:id="@+id/tvNama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Tokoh"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tvJulukan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Julukan Tokoh"
            android:textSize="13sp"
            android:textColor="#666666"
            android:textAlignment="center"
            android:lineSpacingExtra="4dp" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
