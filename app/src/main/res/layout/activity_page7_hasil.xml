<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F8F0E5"
    android:fitsSystemWindows="true">

    <!-- Header -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#6D2932">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="12dp"
            android:paddingEnd="12dp">

            <ImageView
                android:id="@+id/backButton"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_back_arrow"
                android:tint="@android:color/white" />

            <TextView
                android:id="@+id/headerTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Tes Pengetahuan"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>
    </FrameLayout>

    <!-- Konten -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_background"
                android:orientation="vertical"
                android:elevation="4dp"
                android:padding="20dp">

                <!-- Info User -->
                <TextView
                    android:id="@+id/userInfoTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nama: -"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:layout_marginBottom="12dp"
                    android:textStyle="bold"
                    android:gravity="center" />

                <!-- Skor -->
                <TextView
                    android:id="@+id/skorTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0/0"
                    android:textColor="@android:color/white"
                    android:textSize="48sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginBottom="8dp" />

                <!-- Status Lulus -->
                <TextView
                    android:id="@+id/statusLulusTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Status: -"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginBottom="16dp" />

                <!-- Gambar -->
                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="20dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_launcher_foreground" />

                <!-- Benar -->
                <Button
                    android:id="@+id/btnBenar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/option_button"
                    android:text="Benar : 0"
                    android:textColor="@android:color/white" />

                <!-- Salah -->
                <Button
                    android:id="@+id/btnSalah"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:background="@drawable/option_button"
                    android:text="Salah : 0"
                    android:textColor="@android:color/white" />

                <!-- Kembali -->
                <Button
                    android:id="@+id/btnKembali"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/option_button"
                    android:text="Kembali"
                    android:textColor="@android:color/white" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
